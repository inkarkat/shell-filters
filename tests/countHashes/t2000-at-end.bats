#!/usr/bin/env bats

@test "input without hashes is kept as-is" {
    run countHashes <<-'EOF'
Just some text.
Nothing special.
EOF
    [ "$output" = "Just some text.
Nothing special." ]
}

@test "input with one hash at the end counts as 1" {
    run countHashes <<-'EOF'
This has #
Nothing here.
EOF
    [ "$output" = "This has 1
Nothing here." ]
}

@test "count 1..9 hashes at the end" {
    run countHashes <<-'EOF'
1 is #
2 is ##
3 is ###
4 is ####
5 is #####
6 is ######
7 is #######
8 is ########
9 is #########
EOF
    [ "$output" = "1 is 1
2 is 2
3 is 3
4 is 4
5 is 5
6 is 6
7 is 7
8 is 8
9 is 9" ]
}

@test "count tens hashes at the end" {
    run countHashes <<-'EOF'
10 is ##########
11 is ###########
19 is ###################
20 is ####################
22 is ######################
40 is ########################################
90 is ##########################################################################################
98 is ##################################################################################################
99 is ###################################################################################################
EOF
    [ "$output" = "10 is 10
11 is 11
19 is 19
20 is 20
22 is 22
40 is 40
90 is 90
98 is 98
99 is 99" ]
}

@test "count hundreds hashes at the end" {
    run countHashes <<-'EOF'
