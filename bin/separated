#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Add a separator containing TEXT (default: empty line) in between each
(non-empty) FILE.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-s|--separator TEXT] [--] [FILE ...] [-?|-h|--help]'
}
separator=$'\n'
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --separator|-s)	shift; separator="$1"; shift;;
esac

awk \
    -v "separator=${separator//\\/\\\\}" \
'
FNR==1 && NR != FNR {
    printf("%s", separator)
}
{
    printf("%s%s", $0, RT)
}
' "$@"
