#!/bin/bash
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Select and print a line from standard input only once every second / TIMESPAN;
discard additional lines.
    --inline|-i		Overwrite the existing terminal line instead of
			accumulating the sampled lines in the output.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-i|--inline] [-t|--timespan TIMESPAN[SUFFIX]] [-?|-h|--help]'
}

isInline=
timespan=1
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--inline|-i)	shift; isInline=t;;
	--timespan|-t)	shift
			case "$1" in
			    +([0-9])?(s))   timespan="${1%s}";;
			    +([0-9])m)	    timespan=$((${1%m} * 60));;
			    +([0-9])h)	    timespan=$((${1%h} * 3600));;
			    +([0-9])d)	    timespan=$((${1%d} * 86400));;
			esac
			shift
			;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done

SECONDS=0
eol='\n'
while IFS=$'\n' read -r line || { eol=; [ -n "$line" ]; }
do
    if [ $SECONDS -ge $timespan ]; then
	printf "%s$eol" "$line"
	SECONDS=0
    fi
done
