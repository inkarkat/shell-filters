#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Append SUFFIX to each individual line.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" 'SUFFIX [FILE, ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

suffix=$1; shift
literalReplacement=$suffix
literalReplacement=${literalReplacement//\/\\}
literalReplacement=${literalReplacement//&/\&}
exec sed -e "s#\$#${literalReplacement//#/\\#}#" "$@"
