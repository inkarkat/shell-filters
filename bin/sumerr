#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Execute COMMANDLINE, then separately summarize the stderr output after
COMMANDLINE's execution (and normal output).
HELPTEXT
printf 'Usage: %q %s\n' "$(basename "$1")" 'COMMANDLINE [...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
[ $# -eq 0 ] && { printUsage "$0"; exit 2; }


set -e

TMPFILE=$(mktemp --tmpdir "$(basename -- "$0")-XXXXXX" 2>/dev/null || echo "${TEMP:-/tmp}/$(basename -- "$0").$$")
finally()
{
    if [ -s "$TMPFILE" ]; then
	echo -e "\\n\\e[01;31m=== ERRORS ==="
	cat -- "$TMPFILE"
    fi
    rm -f -- "$TMPFILE" 2>/dev/null
}
trap 'finally' INT TERM EXIT

eval "${@//[${IFS-$' \t\n'}]/\\ }" 2> >(while read -r line; do echo -e "\\e[01;31m${line}\\e[0m"; done | tee -- "$TMPFILE")
