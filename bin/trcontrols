#!/bin/bash

: ${TRCONTROLS_PREFIX=[07m}
: ${TRCONTROLS_SUFFIX=[0m}

printUsage()
{
    cat <<HELPTEXT
Translate all unprintable control characters (including ANSI escape sequences)
into printable representations; e.g. <Esc> into ^[ (highlighted ${TRCONTROLS_PREFIX}^[${TRCONTROLS_SUFFIX} when output
is to the terminal and no --no-color is given).
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--color=(always|auto|never)|--no-color] [SED-OPTIONS ...] FILE [...] [-?|-h|--help]'
    printf 'Usage: cat FILE [...] | %q %s\n' "$(basename "$1")" '...'
}

isColor=; [ -t 1 ] && isColor=t
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=never)
			isColor=; shift;;
    --color=always)	isColor=t; shift;;
    --color)		case "$2" in
			    always) isColor=t;;
			    never)  isColor=;;
			esac
			shift; shift
			;;
esac
if [ "$isColor" ]; then
    P="$TRCONTROLS_PREFIX"
    P="${P//\\/\\\\}"
    P="${P//&/\\&}"
    P="${P//\//\\/}"
    S="$TRCONTROLS_SUFFIX"
    S="${S//\\/\\\\}"
    S="${S//&/\\&}"
    S="${S//\//\\/}"
else
    P=''
    S=''
fi

exec sed \
    -e "s/[\\x1b]\\(\\[[0-9:;?]*[[:alpha:]]\\)\\?/${P}^[\\1${S}/g" \
    -e "s/[\\x00]/${P}^@${S}/g" \
    -e "s/[\\x01]/${P}^A${S}/g" \
    -e "s/[\\x02]/${P}^B${S}/g" \
    -e "s/[\\x03]/${P}^C${S}/g" \
    -e "s/[\\x04]/${P}^D${S}/g" \
    -e "s/[\\x05]/${P}^E${S}/g" \
    -e "s/[\\x06]/${P}^F${S}/g" \
    -e "s/[\\x07]/${P}^G${S}/g" \
    -e "s/[\\x08]/${P}^H${S}/g" \
    -e "s/[\\x09]/${P}^I${S}/g" \
    -e "s/[\\x0a]/${P}^J${S}/g" \
    -e "s/[\\x0b]/${P}^K${S}/g" \
    -e "s/[\\x0c]/${P}^L${S}/g" \
    -e "s/[\\x0d]/${P}^M${S}/g" \
    -e "s/[\\x0e]/${P}^N${S}/g" \
    -e "s/[\\x0f]/${P}^O${S}/g" \
    -e "s/[\\x10]/${P}^P${S}/g" \
    -e "s/[\\x11]/${P}^Q${S}/g" \
    -e "s/[\\x12]/${P}^R${S}/g" \
    -e "s/[\\x13]/${P}^S${S}/g" \
    -e "s/[\\x14]/${P}^T${S}/g" \
    -e "s/[\\x15]/${P}^U${S}/g" \
    -e "s/[\\x16]/${P}^V${S}/g" \
    -e "s/[\\x17]/${P}^W${S}/g" \
    -e "s/[\\x18]/${P}^X${S}/g" \
    -e "s/[\\x19]/${P}^Y${S}/g" \
    -e "s/[\\x1a]/${P}^Z${S}/g" \
    -e "s/[\\x1c]/${P}^\\\\${S}/g" \
    -e "s/[\\x1d]/${P}^]${S}/g" \
    -e "s/[\\x1e]/${P}^^${S}/g" \
    -e "s/[\\x1f]/${P}^_${S}/g" \
    -e "s/[\\x7f]/${P}^?${S}/g" \
    -e "s/[\\x80]/${P}~@${S}/g" \
    -e "s/[\\x81]/${P}~A${S}/g" \
    -e "s/[\\x82]/${P}~B${S}/g" \
    -e "s/[\\x83]/${P}~C${S}/g" \
    -e "s/[\\x84]/${P}~D${S}/g" \
    -e "s/[\\x85]/${P}~E${S}/g" \
    -e "s/[\\x86]/${P}~F${S}/g" \
    -e "s/[\\x87]/${P}~G${S}/g" \
    -e "s/[\\x88]/${P}~H${S}/g" \
    -e "s/[\\x89]/${P}~I${S}/g" \
    -e "s/[\\x8a]/${P}~J${S}/g" \
    -e "s/[\\x8b]/${P}~K${S}/g" \
    -e "s/[\\x8c]/${P}~L${S}/g" \
    -e "s/[\\x8d]/${P}~M${S}/g" \
    -e "s/[\\x8e]/${P}~N${S}/g" \
    -e "s/[\\x8f]/${P}~O${S}/g" \
    -e "s/[\\x90]/${P}~P${S}/g" \
    -e "s/[\\x91]/${P}~Q${S}/g" \
    -e "s/[\\x92]/${P}~R${S}/g" \
    -e "s/[\\x93]/${P}~S${S}/g" \
    -e "s/[\\x94]/${P}~T${S}/g" \
    -e "s/[\\x95]/${P}~U${S}/g" \
    -e "s/[\\x96]/${P}~V${S}/g" \
    -e "s/[\\x97]/${P}~W${S}/g" \
    -e "s/[\\x98]/${P}~X${S}/g" \
    -e "s/[\\x99]/${P}~Y${S}/g" \
    -e "s/[\\x9a]/${P}~Z${S}/g" \
    -e "s/[\\x9b]/${P}~[${S}/g" \
    -e "s/[\\x9c]/${P}~\\\\${S}/g" \
    -e "s/[\\x9d]/${P}~]${S}/g" \
    -e "s/[\\x9e]/${P}~^${S}/g" \
    -e "s/[\\x9f]/${P}~_${S}/g" \
    -e "s/[\\xa0]/${P}| ${S}/g" \
    -e "s/[\\xa1]/${P}|!${S}/g" \
    -e "s/[\\xa2]/${P}|\"${S}/g" \
    -e "s/[\\xa3]/${P}|#${S}/g" \
    -e "s/[\\xa4]/${P}|\$${S}/g" \
    -e "s/[\\xa5]/${P}|%${S}/g" \
    -e "s/[\\xa6]/${P}|&${S}/g" \
    -e "s/[\\xa7]/${P}|'${S}/g" \
    -e "s/[\\xa8]/${P}|(${S}/g" \
    -e "s/[\\xa9]/${P}|)${S}/g" \
    -e "s/[\\xaa]/${P}|*${S}/g" \
    -e "s/[\\xab]/${P}|+${S}/g" \
    -e "s/[\\xac]/${P}|,${S}/g" \
    -e "s/[\\xad]/${P}|-${S}/g" \
    -e "s/[\\xae]/${P}|.${S}/g" \
    -e "s/[\\xaf]/${P}|${S}\//g" \
    -e "s/[\\xb0]/${P}|0${S}/g" \
    -e "s/[\\xb1]/${P}|1${S}/g" \
    -e "s/[\\xb2]/${P}|2${S}/g" \
    -e "s/[\\xb3]/${P}|3${S}/g" \
    -e "s/[\\xb4]/${P}|4${S}/g" \
    -e "s/[\\xb5]/${P}|5${S}/g" \
    -e "s/[\\xb6]/${P}|6${S}/g" \
    -e "s/[\\xb7]/${P}|7${S}/g" \
    -e "s/[\\xb8]/${P}|8${S}/g" \
    -e "s/[\\xb9]/${P}|9${S}/g" \
    -e "s/[\\xba]/${P}|:${S}/g" \
    -e "s/[\\xbb]/${P}|;${S}/g" \
    -e "s/[\\xbc]/${P}|<${S}/g" \
    -e "s/[\\xbd]/${P}|=${S}/g" \
    -e "s/[\\xbe]/${P}|>${S}/g" \
    -e "s/[\\xbf]/${P}|?${S}/g" \
    -e "s/[\\xc0]/${P}|@${S}/g" \
    -e "s/[\\xc1]/${P}|A${S}/g" \
    -e "s/[\\xc2]/${P}|B${S}/g" \
    -e "s/[\\xc3]/${P}|C${S}/g" \
    -e "s/[\\xc4]/${P}|D${S}/g" \
    -e "s/[\\xc5]/${P}|E${S}/g" \
    -e "s/[\\xc6]/${P}|F${S}/g" \
    -e "s/[\\xc7]/${P}|G${S}/g" \
    -e "s/[\\xc8]/${P}|H${S}/g" \
    -e "s/[\\xc9]/${P}|I${S}/g" \
    -e "s/[\\xca]/${P}|J${S}/g" \
    -e "s/[\\xcb]/${P}|K${S}/g" \
    -e "s/[\\xcc]/${P}|L${S}/g" \
    -e "s/[\\xcd]/${P}|M${S}/g" \
    -e "s/[\\xce]/${P}|N${S}/g" \
    -e "s/[\\xcf]/${P}|O${S}/g" \
    -e "s/[\\xd0]/${P}|P${S}/g" \
    -e "s/[\\xd1]/${P}|Q${S}/g" \
    -e "s/[\\xd2]/${P}|R${S}/g" \
    -e "s/[\\xd3]/${P}|S${S}/g" \
    -e "s/[\\xd4]/${P}|T${S}/g" \
    -e "s/[\\xd5]/${P}|U${S}/g" \
    -e "s/[\\xd6]/${P}|V${S}/g" \
    -e "s/[\\xd7]/${P}|W${S}/g" \
    -e "s/[\\xd8]/${P}|X${S}/g" \
    -e "s/[\\xd9]/${P}|Y${S}/g" \
    -e "s/[\\xda]/${P}|Z${S}/g" \
    -e "s/[\\xdb]/${P}|[${S}/g" \
    -e "s/[\\xdc]/${P}|\\\\${S}/g" \
    -e "s/[\\xdd]/${P}|]${S}/g" \
    -e "s/[\\xde]/${P}|^${S}/g" \
    -e "s/[\\xdf]/${P}|_${S}/g" \
    -e "s/[\\xe0]/${P}|\`${S}/g" \
    -e "s/[\\xe1]/${P}|a${S}/g" \
    -e "s/[\\xe2]/${P}|b${S}/g" \
    -e "s/[\\xe3]/${P}|c${S}/g" \
    -e "s/[\\xe4]/${P}|d${S}/g" \
    -e "s/[\\xe5]/${P}|e${S}/g" \
    -e "s/[\\xe6]/${P}|f${S}/g" \
    -e "s/[\\xe7]/${P}|g${S}/g" \
    -e "s/[\\xe8]/${P}|h${S}/g" \
    -e "s/[\\xe9]/${P}|i${S}/g" \
    -e "s/[\\xea]/${P}|j${S}/g" \
    -e "s/[\\xeb]/${P}|k${S}/g" \
    -e "s/[\\xec]/${P}|l${S}/g" \
    -e "s/[\\xed]/${P}|m${S}/g" \
    -e "s/[\\xee]/${P}|n${S}/g" \
    -e "s/[\\xef]/${P}|o${S}/g" \
    -e "s/[\\xf0]/${P}|p${S}/g" \
    -e "s/[\\xf1]/${P}|q${S}/g" \
    -e "s/[\\xf2]/${P}|r${S}/g" \
    -e "s/[\\xf3]/${P}|s${S}/g" \
    -e "s/[\\xf4]/${P}|t${S}/g" \
    -e "s/[\\xf5]/${P}|u${S}/g" \
    -e "s/[\\xf6]/${P}|v${S}/g" \
    -e "s/[\\xf7]/${P}|w${S}/g" \
    -e "s/[\\xf8]/${P}|x${S}/g" \
    -e "s/[\\xf9]/${P}|y${S}/g" \
    -e "s/[\\xfa]/${P}|z${S}/g" \
    -e "s/[\\xfb]/${P}|{${S}/g" \
    -e "s/[\\xfc]/${P}||${S}/g" \
    -e "s/[\\xfd]/${P}|}${S}/g" \
    -e "s/[\\xfe]/${P}|~${S}/g" \
    -e "s/[\\xff]/${P}|~${S}/g" \
    "$@"
