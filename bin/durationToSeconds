#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Convert line(s) of MM:SS into seconds. Other lines are ignored and passed through.
HELPTEXT
    printf 'Usage: cat FILE [...] | %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

awk -F ':' \
'
/^[[:digit:]]{1,}:[[:digit:]]{2}$/ { $0 = ($1 * 60) + $2 }
{ print }
'
