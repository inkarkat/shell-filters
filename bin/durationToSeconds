#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Convert matches of [HH:]MM:SS into seconds.
HELPTEXT
    printf 'Usage: cat FILE [...] | %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

awk -F $'\n' \
'
function convert(duration,      n, tuples)
{
    n = split(duration, tuples, /:/)
    if (n == 2)
	return tuples[1] * 60 + tuples[2]
    else if (n == 3)
	return tuples[1] * 3600 + tuples[2] * 60 + tuples[3]
    else
	return duration
}
{
    n = split($0, durations, /\<[[:digit:]]+(:[[:digit:]]{2}){1,2}\>/, separators)
    for (i = 1; i <= n; ++i) {
	separators[i] = convert(separators[i])
    }

    result = ""
    for (i = 1; i <= n; ++i) {
	result = result durations[i] separators[i]
    }
    result = result durations[++i]
    $0 = result
    print
}
'
