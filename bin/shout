#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Convert all lowercase characters to uppercase (which means "shouting" in IRC).
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '-- FILE [...] [-?|-h|--help]'
    printf 'Usage: %q %s\n' "$(basename "$1")" 'MESSAGE [...]'
    printf 'Usage: cat FILE [...] | %q\n' "$(basename "$1")"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

typeset -a SHOUT=(sed -e 'y/abcdefghijklmnopqrstuvwxyz/ABCDEFGHIJKLMNOPQRSTUVWXYZ/')
if [ $# -eq 0 ]; then
    exec "${SHOUT[@]}"
elif [ $# -ge 2 -a "$1" = '--' ]; then
    cat "$@" | "${SHOUT[@]}"
else
    printf '%s\n' "$*" | "${SHOUT[@]}"
fi
