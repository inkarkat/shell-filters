#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Add one line of padding before and after output when there is actually output.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [FILE ...] [-?|-h|--help]'
    echo
    printf 'Usage: cat FILE [...] | %q %s\n' "$(basename "$1")" '[...]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac


exec sed -e '1i\

$a\
' "$@"
